<strong>Editing Book</strong>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>
<p>
<%= f.submit 'Update Book' %>
</p>

        <span>
          <%= link_to "show", book_path(@book.id) %>
        </span>
        |
        <span>
          <%= link_to "Back", books_path(@book.id) %>
        </span>
        <% end %>