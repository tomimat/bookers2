
<div>
  <%= flash[:notice] %>
</div>

<p id="notice"></p>
<h1>Books</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>error prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
       <% @books.each do |book| %>
  <tbody>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>
        <span>
          <%= link_to "show", book_path(book.id) %>
        </span>
      </td>
      <td>
        <span>
          <%= link_to "edit", edit_book_path(book.id) %>
        </span>
      </td>
      <td>
        <span>
          <%= link_to "Destroy", book_path(book.id),method: :delete %>
        </span>
      </td>
      <% end %>
    </tr>
  </tbody>
</table>
<h2>New book</h2>
<%= form_with model: @book do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>
<P>
<%= f.submit 'Create Book' %>
</p>
<% end %>
